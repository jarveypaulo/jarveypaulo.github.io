<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="mm.controller.launchpad">
	<Popover
		id="popOverAccount"
        showHeader="false" 
		class="sapTntToolHeaderPopover"
		placement="Bottom"
		initialFocus="idAccount"
        contentWidth="100px"
		contentHeight="110px">
        <Button id="idAccount" 
			icon="sap-icon://person-placeholder" 
			text="Profile" 
			type="Transparent" press="onAccountShow"  visible="true" />
        <Button id="idLogin" text="Log On" type="Transparent" press="onLogon" visible="false"/>
        <Button id="idLogout" 
			icon="sap-icon://action" 
			text="Logout" 
			type="Transparent" press="onLogout" visible="true"/>
	</Popover>
</core:FragmentDefinition>
