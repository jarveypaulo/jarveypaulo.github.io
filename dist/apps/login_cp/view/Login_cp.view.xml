<mvc:View xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form" 
    controllerName="mm.apps.login_cp.controller.Login_cp">
    <Page id="userChangePasswordPage" title="{i18n>ChangePasswordPageTitle}" class="sapUiResponsiveContentPadding">
        <content><VBox width="250px" id="vboxLogin" justifyContent="Center" fitContainer="true" alignContent="Center" class="sapUiForceWidthAuto" renderType="Bare" wrap="Wrap" alignItems="Center">
                <items>
                <HBox width="350px" id="hBoxNewPassword" alignContent="Center" displayInline="true" fitContainer="true" justifyContent="Center" direction="Column" alignItems="Center">
                    <items>
                        <Input xmlns="sap.m" id="idNewPassword" type="Password" placeholder="Type new password..." required="true" class="sapUiTinyMargin" fieldWidth="" width="322px"/>
                        
                    </items>
                </HBox>
                <HBox width="350px" id="hBoxNewPassword2" alignContent="Center" fitContainer="true" justifyContent="Center">
                    <items>
                        <Input xmlns="sap.m" id="idNewPassword2" type="Password" placeholder="Retype new password..." required="true" class="sapUiTinyMargin" fieldWidth="" width="322px"/>
		                
                    </items>
                </HBox>
                </items>
            </VBox>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button id="btnSaveNewPassword" type="Accept" text="Save New Password" icon="sap-icon://save" 
                    press="onSavePassword"  enabled="true" />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>